@model FBI.Webpage.Models.IndexViewModel
@{
    ViewBag.Title = "Admin Panel";
}

<div class="main-content">
    <div class="limited-width-container">
        <p>&nbsp</p>
        <p>&nbsp</p>
        <h1 id="head">Welcome to the Admin Panel:</h1>

        
        
        <input type="button" value="Update Database" id="update" onclick="location.href='@Url.Action("UpdateDB", "Manage")'; change()" />
        <h3>Add new profiles</h3>
</div>
        <div class="container2">
            <div class="form-inline">
                @using (Html.BeginForm("AddProfile", "Manage"))
                {
                    <div class="row">
                        <p class="formfield">
                            <label for="Photo Url">Photo:</label>

                            @Html.TextBoxFor(model => model.image.large)

                            <label for="m.status">Reward:</label>
                            @Html.TextBoxFor(model => model.item.reward_max)
                        </p>
                        </div>

                        <div class="row">

                            @Html.AntiForgeryToken()

                            <p class="formfield">
                                <label for="m.title">Title:</label>
                                @Html.TextBoxFor(m => m.item.title)




                                <label for="m.nationality">Nationality:</label>
                                @Html.TextBoxFor(model => model.item.nationality)

                               

                            </p>

                        </div>

                        <div class="row">
                           
                            <div class="formfield">
                                <div class="bottom">
                                    @Html.HiddenFor(model => model.item.uid)


                                    <label for="m.caution">Warning:</label>

                                    @Html.TextAreaFor(model => model.item.warning_message)
                                </div>


                                <div class="bottom2">
                                    <label for="m.description">Prosecution:</label>
                                    @Html.TextAreaFor(model => model.item.description)


                                    @Html.HiddenFor(model => model.item.status)
                                    @Html.HiddenFor(model => model.item.reward_min)
                                    </div>
                                </div>
                            </div>
                    
                            @*@for (int i = 0; i < Model.item.images.Count(); i++)
        {
            @Html.HiddenFor(model => model.item.images[i]);
        }*@

                            @*@for (int i = 0; i < Model.item.locations.Count(); i++)
        {
            @Html.HiddenFor(model => model.item.locations[i]);
        }*@


                           

                            <div class="row">
                                <p class="formfield">
                                    <input type="submit" value="Submit New Profile" class="centeredButton"/>
                                </p>
                            </div>

                       





                            }

                        </div>

                </div>
        
    </div>
</div>
<br />
<div style="border: solid; border-color : red; background-color: rgba(255, 0, 0,.5); border-radius : 15px">
    <a href="@Url.Action("Nuke", "Manage")" onclick="return confirm('Are you sure you want to nuke the database??')">
        <img id="nuke-button" src="https://i.ya-webdesign.com/images/nuke-logo-png-11.png" style="height:90px; width:90px; cursor: pointer; position: center" /> <b><u>DELETE THE DATABASE</u></b> 
    </a>
</div>


        <script>
            function change() {
                var elem = document.getElementById("update");
                elem.value = "Updating...";
            }


        </script>
        <link rel="stylesheet" href="~/Content/ProfileStyle.css" />