@model FBI.DataAccess.MostWantedProfilesModel.Root2

@{
    ViewBag.Title = "Most Wanted";
}

<div class="jumbotron">

    <h1>FBI Most Wanted</h1>

</div>


<div class="main-content">

    @foreach (var fugitive in Model.items)
    {
        <div class="col-md-4">
            <div>
                <div style="height: 400px; width: 300px;">
                    <img src="@fugitive.images[0]" style="max-width:100%; height:auto;">
                </div>

                <div class=>
                    <p class="user-link">@Html.ActionLink("ViewProfile", "Edit", "Home", fugitive)</p>
                    <p>
                     <h4>@fugitive.title</h4>
                    </p>
                    <p>
                        <h5>
                            @if (fugitive.caution != "null")
                            {
                                @fugitive.caution
                            }
                            @if (fugitive.caution == "null")
                            {
                                <br />
                                <br />
                            }

                        </h5>
                    </p>

                </div>
            </div>
        </div>
    }
