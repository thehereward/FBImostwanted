        @using (Html.BeginForm("ViewProfile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

        <div class="row">

            @Html.AntiForgeryToken()

            <p class="formfield">
                <label for="m.title">Title:</label>
                @Html.TextBoxFor(m => m.title)


               

                <label for="m.nationality">Nationality:</label>
                @Html.TextBoxFor(model => model.nationality)

                <label for="m.status">Reward:</label>
                @Html.TextBoxFor(model => model.reward_max)

            </p>

        </div>
            
        <div class="row">
            <p class="formfield">

                @Html.HiddenFor(model => model.uid)

                <label for="m.caution">Warning:</label>
                @Html.TextAreaFor(model => model.caution)

                <label for="m.description">Prosecution:</label>
                @Html.TextAreaFor(model => model.description)


                @Html.HiddenFor(model => model.status)
                @Html.HiddenFor(model => model.reward_min)

                @for (int i = 0; i < Model.images.Count(); i++)
                {
                    @Html.HiddenFor(model => model.images[i]);
                }

                @for (int i = 0; i < Model.locations.Count(); i++)
                {
                    @Html.HiddenFor(model => model.locations[i]);
                }

                <input type="submit" value="Save Changes" />
            </p>




        </div>




    @foreach (var report in Model.reports)
    {
        <p><b>Report id: @report.sid</b></p>
        <p>Date: @report.date</p>
        <p>Time: @report.time</p>
        <p>Address: @report.addr</p>
        <p>Address Detals: @report.addrspec</p>
        <p>Comments: @report.comment</p>
        <p>Verified: @report.verified</p>
        if (report.verified == false)
        {
            <a href=@Url.Action("ApproveReport", new { report = report.sid, uid = report.uid })> 
                <button>Verify Report</button>
            </a>
        }
        <a href=@Url.Action("DeleteReport", new { sid = report.sid, uid = report.uid })>
           <button>Delete Report</button>
        </a>
     
        <br /><br />
    }

        </div>

    <hr>
</div>
    </div>

