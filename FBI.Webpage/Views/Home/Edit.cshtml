@model FBI.Webpage.Models.Item
@{
    ViewBag.Title = "Edit A Most Wanted Profile";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>You can Edit the details for this Most Wanted Profile below.</h4>

    <div class="container">
        <h1>Edit Profile</h1>
        <hr>
        <div class="row">
            <!-- left column -->
            
                <div class="text-center">
                    @{ foreach (var image in Model.images)
                        {
                            <img src="@image.thumb" class="avatar" alt="avatar" height="300" >
                        }}

                    <h6>Upload a different photo...</h6>

                    <input type="file" class="form-control">
                </div>
         

            <!-- edit form column -->
                <div class="personal-info">
                    @{if (Model.caution != null)
                        {

                            <div class="alert alert-danger alert-dismissable">
                                <a class="panel-close close" data-dismiss="alert">×</a>
                                <i class="fa fa-coffee"></i>
                                Caution! <strong>@Model.caution </strong>
                            </div>
                        }
                    }

                    <h3>Personal info</h3>

                    @using (Html.BeginForm("PostTheEditedProfile", "Home", FormMethod.Post))
                    {
                        @Html.TextAreaFor(m => m.title)
                        @Html.TextAreaFor(model => model.description)
                        @Html.TextAreaFor(model => model.caution)
                        @Html.TextAreaFor(model => model.uid)
                        @Html.TextAreaFor(model => model.status)
                        @Html.TextAreaFor(model => model.nationality)

                        <input type="submit" value="Save Changes" />
                    }
