@model FBI.Webpage.Models.accountViewModel



<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/assets/ninja-slider.css" rel="stylesheet" />

    <script src="~/assets/ninja-slider.js"></script>
</head>

<h2>Edit @Model.title 's Profile</h2>

@*<p class="text-success">@ViewBag.StatusMessage</p>*@
<div>
    <h4>You can Edit the details for this Most Wanted Profile below.</h4>

    <div class="container2">


        <div id="ninja-slider">
            <div class="inner">
                <ul>
                    @foreach (var item in Model.images)
                    {
                        <li><a href="/"><img class="ns-img" src=@item style="background-size:auto 200px;"></a></li>
                    }

                </ul>
            </div>
        </div>



                <script src="~/Scripts/jquery-1.10.2.min.js"></script>
                <script src="~/Scripts/jquery.validate.min.js"></script>
                <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
           
        
        <hr>
        <div class="form-inline">
       

            <!-- edit form column -->
            <div class="personal-info">
                @if (Model.caution != null && Model.caution != "null" && !Model.caution.IsEmpty() && Model.caution != "" && Model.caution != "caution")
                    {

                        <div class="alert alert-danger alert-dismissable">

                        <i class="fa fa-coffee"></i>
                        Caution! <strong>@Model.caution </strong>
                        </div>

                     }

             </div>

        </div>

        <div class="row">
        <h3>Personal info</h3>
        </div>

