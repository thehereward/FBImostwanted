@model FBI.Webpage.Models.accountViewModel
@using FBI.DataAccess
@{
    ViewBag.Title = "";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/assets/ninja-slider.css" rel="stylesheet" />

    <script src="~/assets/ninja-slider.js"></script>
</head>



<h1>@Model.fugitive.title</h1>
@if (Model.fugitive.description.Contains("Murder") || Model.fugitive.description.Contains("Murderer") || Model.fugitive.description.Contains("Killed") || Model.fugitive.description.Contains("Murdered") || Model.fugitive.description.Contains("Murdering") || Model.fugitive.description.Contains("Killing") || Model.fugitive.description.Contains("Homicide") || (Model.fugitive.description.Contains("murder") || Model.fugitive.description.Contains("murderer") || Model.fugitive.description.Contains("killed") || Model.fugitive.description.Contains("murdered") || Model.fugitive.description.Contains("murdering") || Model.fugitive.description.Contains("killing") || Model.fugitive.description.Contains("homicide") && !Model.fugitive.description.Contains("Murder Victim") && !Model.fugitive.description.Contains("Homicide Victim") && !Model.fugitive.description.Contains("murder victim") && !Model.fugitive.description.Contains("homicide victim")))
{
    <p class="murderMessage"> Wanted For Murder </p>
}



<div id="ninja-slider">
    <div class="inner">
        <ul>
            @foreach (var item in Model.fugitive.images)
            {
                <li><a href="/"><img class="ns-img" src=@item style="background-size:auto 200px;"></a></li>
            }

        </ul>
    </div>
</div>

<div class="container2">
   

    @{if (Model.fugitive.caution != null && Model.fugitive.caution != "null" && Model.fugitive.caution != "caution" && Model.fugitive.caution != "" && !Model.fugitive.caution.IsEmpty())
        {

            <div class="alert alert-danger">
                <i class="fa fa-coffee"></i>
                Caution! <strong>@Model.fugitive.caution </strong>
            </div>
        }
    }

    <h3>Personal info</h3>

    @using (Html.BeginForm("PostTheEditedProfile", "Home", FormMethod.Post))
    {

        <div class="row">

            @Html.AntiForgeryToken()

            <div class="formfield">
                <label for="m.title">Title:</label>
                <div class="display">
                    @Html.DisplayFor(m => m.fugitive.title)
                </div>




                <label for="m.nationality">Nationality:</label>
                <div class="display">
                    @Html.DisplayFor(model => model.fugitive.nationality)
                </div>



            </div>

        </div>

        <div class="row">
            <div class="formfield">

                @Html.HiddenFor(model => model.fugitive.uid)

                <label for="m.caution">Warning:</label>
                <div class="display">
                    @Html.DisplayFor(model => model.fugitive.caution)
                </div>

                <label for="m.Reward">Reward:</label>

                <div class="display"> @Html.DisplayFor(model => model.fugitive.reward_max)</div>




                @Html.HiddenFor(model => model.fugitive.status)
                @Html.HiddenFor(model => model.fugitive.reward_min)

                @for (int i = 0; i < Model.fugitive.images.Count(); i++)
                {
                    @Html.HiddenFor(model => model.fugitive.images[i]);
                }

                @for (int i = 0; i < Model.fugitive.locations.Count(); i++)
                {
                    @Html.HiddenFor(model => model.fugitive.locations[i]);
                }


            </div>




        </div>
        <div class="row">
            <div class="formfield">
                <label for="m.description">Prosecution:</label>
                <div class="display2"> @Html.DisplayFor(model => model.fugitive.description)</div>
            </div>
        </div>



        if (User.Identity.IsAuthenticated)
        {
            <div class="adminButton">
               
                <input type="submit" value="Edit This Profile" formaction="@Url.Action("Edit", new { uid = Model.fugitive.uid })" />
            </div>
        }

    }

    <div style="background-color:#efeded;  height:350px; padding-top:30px; padding-left:50px; padding-right:50px; margin-top:40px; display: block">
        <div style="width:950px; height:50px">
            <h4> <strong>Report a sighting</strong></h4>
        </div>
        @using (Html.BeginForm("AddReport", "Home", new { uid = Model.fugitive.uid }))
        {

            ReportModel report = new ReportModel();
            report.uid = Model.fugitive.uid;

            <div style="width:300px; height:200px; float:left">

                @Html.HiddenFor(model => report.uid)
                <p><strong>Date:</strong></p>
                @Html.TextBoxFor(model => report.date)
                <br />
                <p><strong>Time:</strong></p>
                @Html.TextBoxFor(model => report.time)
                <br />
            </div>
            <div style="width:300px; height:200px; float:left">
                <p><strong>Location:</strong></p>
                @Html.TextBoxFor(model => report.addr)
                <br />
                <p><strong>Location Specifics:</strong></p>
                @Html.TextBoxFor(model => report.addrspec)
                <br />

            </div>
            <div style="width:400px; height:200px; float:left">
                <p><strong>Comments:</strong></p>
                @Html.TextAreaFor(model => report.comment)
                <br />
                <button type="submit">Submit Report</button>
            </div>
        }

    </div>

    <div style="background-color:#efeded;  height:350px; padding-top:30px; padding-left:50px; padding-right:50px; margin-top:40px; display: block">

        <div style="width:950px; height:50px">
            <h4><strong> Reports of sightings</strong></h4>
        </div>

        @foreach (var report in Model.reports)
        {
            <div style="float:left; width:300px; height:400px">
                @if (report.verified == true)
                {
                    <p><b>Report id: @report.sid</b></p>
                    <p>Date: @report.date</p>
                    <p>Time: @report.time</p>
                    <p>Address: @report.addr</p>
                    <p>Address Detals: @report.addrspec</p>
                    <p>Comments: @report.comment</p>
                    <br /><br />
                }
            </div>
        }


    </div>
    <div class="col-md-4">

    </div>
</div>








<link rel="stylesheet" href="~/Content/ProfileStyle.css" />

